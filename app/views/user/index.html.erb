<script type="text/javascript"> 
  $(document).ready(function(){
    $(".headerarea").append("<h2>Profile</h2>");
    var screen_name = location.href.slice(27);
    var api_url = "https://api.twitter.com/1/users/show.json?screen_name=" + screen_name + "&callback=?";
    $.getJSON(api_url, function(json,status){
      $("body").css("background", "url("+ json.profile_background_image_url + ")");
      $("#prof_info").append(
             "<div style= 'float:left;'>" +
              "<a target='_blank' href='https://twitter.com/"+ screen_name +"'><img src='"+ json.profile_image_url + "'></a></div>" +
            "<div style= 'float:left; margin-left:1em;'>" +
              "<a target='_blank' href='https://twitter.com/"+ screen_name +"'>"+ "<strong class='screen_name'>@" + screen_name + "</a></strong><br/>" +
              "<strong>" + json.name + "</strong></div>" +
            "<div align='right'>" +
              "<span class='label'>Following</span><a target='_blank' href='https://twitter.com/"+ screen_name + "/following'><strong> "+ json.friends_count + "</strong></a>" +
              "<span class='label' style='margin-left :1em'>Followers</span><a target='_blank' href='https://twitter.com/"+ screen_name + "/followers'><strong> " + json.followers_count + "</strong></a></div>"+
            "<div style='clear:left;'>" +
              "<span class='label success'>Profile</span><br/><p style='margin-top: 5px;'>"+ json.description + "</p>");
    });
  });
</script>

<div class="row">		  
	<div class="span9">
		<div class="well">
			<div id="prof_info"></div>
       </div>

       <h3>Memo</h3>
              <div class="well">
       <% if @memos.present? -%>
              <% @memos.each do |note| %>
			       <div style='margin-left:1em; margin-top:-13px;'>
				    <h4 style="margin-bottom:-7px">id: <%= note.id %></a></h4>
				    <h4>twitter_id: <%= note.name %></a></h4>
				    <h4>nickname: <%= note.note %></a></h4>
 				    <h4>name: <%= note.flag %></a></h4>
                </div>
          <% end %>
      <% else -%>
        <h4>まだこのユーザーに関するメモがありません｡</h4>
              <p id="openmodal" data-controls-modal="my-modal" data-backdrop="true" data-keyboard="true"><a href="">New</a></p>
      <% end -%>
		  </div>
	 </div>
