<!DOCTYPE html>
<html>
  <head>
    <title>Twitmemo</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag "application" %>
    <%= javascript_include_tag "application" %>
    <script type="text/javascript" src="http://www.zurb.com/javascripts/plugins/jquery.textchange.min.js"></script>
    <style type="text/css">
      html, body {
        background-color: #eee;
      }
      body {
        padding-top: 40px;
      }
      .container > footer p {
        text-align: center;
      }
      .container {
        width: 820px;
      }
    </style>
</head>
  <body>
    <%= render 'layouts/popup' %>
    <%= render 'layouts/about' %>
  <div class = "topbar"> 
    <%= render 'layouts/topbar' %>
  </div>
  <!--topbar-->

  <div class="container">
    <div class="content">

        <div class="page-header">
          <% if current_user -%>
            <h1><img src='<%= current_user.img %>'><%= current_user.name %><small> <%= @memos.count %>memo</small></h1>
          <% else -%>
            <h1>Not loged in</h1>
          <% end -%>
        </div>

        <%= yield %>
      </div>

      <footer><p>&copy; Company 2011</p></footer>
    </div> <!-- /container -->
  </body>
</html>
