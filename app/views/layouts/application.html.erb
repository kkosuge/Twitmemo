<!DOCTYPE html>
<html>
  <head>
    <title>Twitmemo</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag "application" %>
    <%= javascript_include_tag "application" %>
    <style type="text/css">
      .container {
        width: 820px;
      }
      h1 a:hover {
        color:#08C;text-decoration:none; 
      }
      h2 {
        margin: -12px 0px -5px 0px;
      }
      h4 {
        margin: 0px 0px -5px 0px; 
      }
      .navi {list-style:none;}
      .navi li {float:left;}
    </style>
  </head>

  <body id="top">
    <div class = "topbar"><%= render 'layouts/topbar' %></div>
    <div class="container">
      <div class="content">
        <% if current_user -%>
          <div class="headerarea"></div> 
          <%= yield %>
          <%= render 'layouts/sidebar' %>
          <%= render 'layouts/popup' %>
        <% else %>
          <%= yield %>
        <% end -%>
      </div>
      <div class="page-header" style="margin-top:0px"></div>
      <footer><a href="/terms">&copy; Twitmemo 2012</a></footer>
    </div>
  </body>
</html>
