<div class="fill">
  <div class="container">
    <h3><%= link_to 'Twitmemo',root_path %></h3>
    <% if current_user -%>
      <%= form_tag(root_path, :method => :get) do %>
        <%= search_field_tag :keyword ,nil,:placeholder => "Search your memos"%>
      <% end -%>
      <p class="pull-right"><%= link_to 'Logout', logout_path, class:"btn primary" %></p>
    <% else -%>
		<p class="pull-right"><%= link_to 'Login with Twitter', 'auth/twitter' ,class:"btn primary" %></p>
    <% end -%>
  </div>
</div>
