<script type="text/javascript"> 
  $(document).ready(function(){
    $(".headerarea").append("<h2>Memos</h2>");
    $(".article").hover(
      function () {
      $(this).find(".editarea").css("visibility","visible");
      },
      function () {
        $(this).find(".editarea").css("visibility","hidden");
      }
    );
  }); 
</script> 

<div class="row">
  <div class="span6">
    <p><%= "Keyword : #{params[:keyword]}" if params[:keyword].present? %></p>
    <div class="memo_area">
      <% if @memos.present? -%> 
        <% @memos.each do |memo| %>
          <div class='<%= memo.name %> article'>
            <div style='float:left;'>
              <%= link_to user_path(screen_name: memo.name) do %><img height="48px" width="48px" src="<%= memo.twitter_user.img_url %>"></a><% end %>
            </div>

            <div style='width:390px; float:left; margin-left:1em; margin-top:-5px;'>
              <h4 id="screen_name"><%= link_to memo.name, user_path(screen_name: memo.name) %> 
              <% if memo.flag == 1 -%>
                <span class="label label-warning status">Public</span>
              <% else -%>
                <span class="label label-info status">Private</span>
              <% end %></h4>
              <p style="margin-top:5px; word-break: break-all;"><%= memo.note %></p>
            </div>    

            <div style="float:right;margin-top:-45px">
              <span class='editmemo editarea' data-id="<%= memo.id %>" data-note="<%= memo.note %>" data-name="<%= memo.name %>" data-img="<%= memo.twitter_user.img_url %>" data-controls-modal="my-modal" data-backdrop="true" data-keyboard="true" style="visibility:hidden;"><i class="icon-edit"></i>Edit</span>
              <span class="editarea" style="visibility:hidden;"><i class="icon-trash"></i><%= link_to 'Delete', memo, confirm: 'メモを削除しますか?', method: :delete, remote: true %></span>
            </div>
      <div class="page-header underline" style="margin-right:5px;margin-top:-20px;margin-bottom:10px; padding: 0px 0px 0px 0px; clear:both;"></div>
          </div>
        <% end %>
      <% else -%>
        <strong class="no_memo">メモがありません</strong>
      <% end %>
    </div>
    <%= paginate @memos %>
  </div>
